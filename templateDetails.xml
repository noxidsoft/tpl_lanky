<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>lanky</name>
	<creationDate>May 2012</creationDate>
	<author>Noxidsoft - Noel Dixon</author>
	<authorEmail>admin@noxidsoft.com</authorEmail>
	<authorUrl>www.noxidsoft.com</authorUrl>
	<copyright>Copyright (C) 2007 - 2012 Noxidsoft. All rights reserved.</copyright>
	<license>Proprietary license, please refer to www.noxidsoft.com</license>
	<version>2.5.4.132</version>
	<description>TPL_LANKY_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>top1</position>
		<position>top2</position>
		<position>top3</position>
		<position>top4</position>
		<position>top5</position>
		<position>header</position>
		<position>contentTop</position>
		<position>left</position>
		<position>right</position>
		<position>footer</position>
		<position>debug</position>
	</positions>
	
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_lanky.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_lanky.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="siteWidth"
					type="text" 
					default="100%" 
					label="Site width" 
					description="This is the site width control. Usage: 100% is full width, can use pixels e.g. 960px or 1080px or similar. Min width recommended is 680px" 
					size="10" />
			</fieldset>
			<fieldset name="advanced">
				<!--<field />-->
			</fieldset>
		</fields>
	</config>
</extension>
